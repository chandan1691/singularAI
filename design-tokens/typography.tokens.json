{
  "$schema": "https://schemas.w3.org/2024/design-tokens/1.0",
  "typography": {
    "fontFamily": {
      "urbanist": {
        "$value": "Urbanist, sans-serif",
        "$type": "fontFamily",
        "$description": "Font family for headings (h1-h6)"
      },
      "inter": {
        "$value": "Inter, sans-serif",
        "$type": "fontFamily",
        "$description": "Font family for body text and UI elements"
      },
      "mono": {
        "$value": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace",
        "$type": "fontFamily",
        "$description": "Font family for code and technical text"
      },
      "sans": {
        "$value": "ui-sans-serif, system-ui, sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji'",
        "$type": "fontFamily",
        "$description": "System sans-serif fallback"
      }
    },
    "fontSize": {
      "html": {
        "$value": "16px",
        "$type": "dimension",
        "$description": "Base HTML font size"
      },
      "xs": {
        "$value": "0.75rem",
        "$type": "dimension",
        "$description": "Extra small text (12px at base 16px)"
      },
      "sm": {
        "$value": "0.875rem",
        "$type": "dimension",
        "$description": "Small text (14px at base 16px)"
      },
      "base": {
        "$value": "1rem",
        "$type": "dimension",
        "$description": "Base body text (16px)"
      },
      "lg": {
        "$value": "1.125rem",
        "$type": "dimension",
        "$description": "Large text (18px at base 16px)"
      },
      "2xl": {
        "$value": "1.5rem",
        "$type": "dimension",
        "$description": "Extra large text (24px at base 16px)"
      },
      "h1": {
        "$value": "56px",
        "$type": "dimension",
        "$description": "Heading 1 size"
      },
      "h2": {
        "$value": "44px",
        "$type": "dimension",
        "$description": "Heading 2 size"
      },
      "h3": {
        "$value": "32px",
        "$type": "dimension",
        "$description": "Heading 3 size"
      },
      "h4": {
        "$value": "28px",
        "$type": "dimension",
        "$description": "Heading 4 size"
      },
      "h5": {
        "$value": "24px",
        "$type": "dimension",
        "$description": "Heading 5 size"
      },
      "h6": {
        "$value": "18px",
        "$type": "dimension",
        "$description": "Heading 6 size"
      },
      "body": {
        "$value": "14px",
        "$type": "dimension",
        "$description": "Body paragraph text size"
      },
      "label": {
        "$value": "14px",
        "$type": "dimension",
        "$description": "Form label text size"
      },
      "button": {
        "$value": "14px",
        "$type": "dimension",
        "$description": "Button text size"
      },
      "input": {
        "$value": "14px",
        "$type": "dimension",
        "$description": "Input field text size"
      }
    },
    "fontWeight": {
      "normal": {
        "$value": "400",
        "$type": "fontWeight",
        "$description": "Normal font weight for body text"
      },
      "medium": {
        "$value": "500",
        "$type": "fontWeight",
        "$description": "Medium font weight for headings and UI elements"
      },
      "semibold": {
        "$value": "600",
        "$type": "fontWeight",
        "$description": "Semibold font weight for dialog titles and emphasis"
      },
      "bold": {
        "$value": "700",
        "$type": "fontWeight",
        "$description": "Bold font weight (available but rarely used)"
      }
    },
    "lineHeight": {
      "none": {
        "$value": "1",
        "$type": "number",
        "$description": "Tight line height for single-line text"
      },
      "tight": {
        "$value": "1.2",
        "$type": "number",
        "$description": "Tight line height for h1"
      },
      "snug": {
        "$value": "1.3",
        "$type": "number",
        "$description": "Snug line height for h2, h3"
      },
      "normal": {
        "$value": "1.4",
        "$type": "number",
        "$description": "Normal line height for h4, h5, h6, labels, buttons"
      },
      "relaxed": {
        "$value": "1.5",
        "$type": "number",
        "$description": "Relaxed line height for inputs and labels"
      },
      "loose": {
        "$value": "1.6",
        "$type": "number",
        "$description": "Loose line height for paragraphs"
      },
      "xs": {
        "$value": "1.33",
        "$type": "number",
        "$description": "Line height for text-xs (calculated: 1 / 0.75)"
      },
      "sm": {
        "$value": "1.43",
        "$type": "number",
        "$description": "Line height for text-sm (calculated: 1.25 / 0.875)"
      },
      "base": {
        "$value": "1.5",
        "$type": "number",
        "$description": "Line height for text-base (calculated: 1.5 / 1)"
      },
      "2xl": {
        "$value": "1.33",
        "$type": "number",
        "$description": "Line height for text-2xl (calculated: 2 / 1.5)"
      },
      "fixed-6": {
        "$value": "1.5rem",
        "$type": "dimension",
        "$description": "Fixed line height of 24px (1.5rem)"
      }
    },
    "letterSpacing": {
      "normal": {
        "$value": "0",
        "$type": "dimension",
        "$description": "Normal letter spacing (default)"
      }
    }
  }
}

